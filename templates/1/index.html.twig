{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Ease & Car{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/connexion.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
<form method="post">
    <div class="container align-middle formulaire ">

        <div class="row justify-content-center ">
            <div class="section-title col-md-6 col-lg-4 text-center pt-3 px-5" style="background : #fff; border-radius: 20px 20px 0px 0px;">
                <h2 id="titre" class="fs-3">Rénitialiser mon <br> mot de passe</h2>
            </div>
        </div>
        <div class="row justify-content-center ">
            <div class="col-md-6 col-lg-4 px-5" style="background : #fff; border-radius: 0px 0px 20px 20px;">
                <!-- <label for="inputEmail">Email</label> -->
                <input type="email" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" placeholder="Votre adresse email" required autofocus>
                <center>
                    <div class="mb-3 mt-3">
                        <button class="btn btn-md btn-ease w-30" type="submit">
                            Valider
                        </button>
                    </div>
                </center>
                <p class="text-center text-break">
                Vous vous rappeler de votre mot de passe ?<a href="{{path("app_login")}}">Connectez-vous !</a> 
                </p>
                
            </div>
        </div>
    </div>
    
</form>
{% endblock %}
