{% extends 'base.html.twig' %}

{% block title %}Connexion - Ease & Car{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/connexion.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container align-middle formulaire ">

        <div class="row justify-content-center ">
            <div class="section-title col-md-6 col-lg-4 text-center pt-3 px-5" style="background : #fff; border-radius: 20px 20px 0px 0px;">
                <h2 id="titre" class="fs-1">Se connecter</h2>
            </div>
        </div>
        <div class="row justify-content-center ">
            <div class="col-md-6 col-lg-4 px-5" style="background : #fff; border-radius: 0px 0px 20px 20px;">
                <!-- <label for="inputEmail">Email</label> -->
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" placeholder="Votre adresse email" required autofocus>
                <!-- <label for="inputPassword">Password</label> -->
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Votre mot de passe" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html #}
                <div class="checkbox mb-3 mt-3 {# d-md-flex d-sm-flex #}">
                   {#  <label class="w-50 my-auto">
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label> #}
                    <center>
                        <div class="w-20">
                            <button class="btn btn-md btn-ease w-30" type="submit">
                                Connexion
                            </button>                       
                        </div>
                    </center>
                    <p class="text-center text-break">
                        Vous n'avez pas de compte ? <a href="{{path("register")}}">Inscrivez-vous !</a> 
                    </p>
                    <p class="text-center text-break">
                        <a href="{{path("app_forgot_password_request")}}">Mot de passe oubli√©?</a> 
                    </p>
                
            </div>
        </div>
    </div>
    
</form>
{% endblock %}
