{% extends 'base.html.twig' %}

{% block title %}Rénitialiser mon <br> mot de passe - Ease & car {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/connexion.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container align-middle formulaire ">
            <div class="row justify-content-center ">

                    <div class="section-title col-md-6 col-lg-4 text-center pt-3 px-5" style="background : #fff; border-radius: 20px 20px 0px 0px;">
                        <h2 id="titre" class="fs-1">Rénitialiser mon mot de passe</h2>
                    </div>
            </div>

        <div class="row justify-content-center ">
            <div class="col-md-6 col-lg-4 px-5" style="background : #fff; border-radius: 0px 0px 20px 20px;">

                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                        
                    <center>
                        <div class="mb-3 mt-3">
                            <button class="btn btn-md btn-ease w-30" type="submit">
                                Valider
                            </button>
                        </div>
                    </center>
                    <p class="text-center text-break">
                Vous vous rappeler de votre mot de passe ?<a href="{{path("app_login")}}">Connectez-vous !</a> 
                </p>
                {{ form_end(requestForm) }}
            <div class="row justify-content-center ">
        <div class="col-md-6 col-lg-4 px-5" style="background : #fff; border-radius: 0px 0px 20px 20px;">    
    </div>
{% endblock %}
