    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cgv in cgvs %}
            <tr>
                <td>{{ cgv.id }}</td>
                <td>{{ cgv.Contenu }}</td>
                <td>
                    <a href="{{ path('cgv_show', {'id': cgv.id}) }}">show</a>
