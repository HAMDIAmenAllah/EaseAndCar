{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/connexion.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
  <section class="contact"data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container signup">
      <div class="row">
        <div class="col-lg-4 mx-auto">
          <div class="inscription-form" style="background:white;">
            <div class="section-title mx-auto" style="background:white;">
              <h2>Formulaire d'inscription</h2>
            </div>         
            <div>
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="row mt-3">
                <div class="col-md-12 form-group">
                  {{ form_errors(form.lastname) }}
                  <div>
                    {{ form_widget(form.lastname, {attr: {placeholder: "Nom :"}}) }}
                  </div>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12 form-group mt-3 mt-md-0">
                  {{ form_errors(form.firstname) }}
                  <div>
                    {{ form_widget(form.firstname, {attr: {placeholder: "Prénom :"}}) }}
                  </div>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12 form-group mt-3 mt-md-0">
                  {{ form_errors(form.email) }}
                  <div>
                    {{ form_widget(form.email, {attr: {placeholder: "Adresse e-mail :"}}) }}
                  </div>
                </div>    
              </div>
              <div class="row mt-3">
                <div class="col-md-12 form-group mt-3 mt-md-0">
                  {{ form_errors(form.password.first) }}
                  <div>
                    {{ form_widget(form.password.first, {attr: {placeholder: "Merci de saisir votre mot de passe :"}}) }}
                  </div>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12 form-group mt-3 mt-md-0">
                  {{ form_errors(form.password.second) }}
                  <div>
                    {{form_widget(form.password.second, {attr: {placeholder: "Merci de confirmer votre mot de passe :"}}) }}
                  </div>
                </div>
              </div>
              {# <center><button class="btn btn-ease mt-2">{{ button_label|default('Envoyer votre message') }}</button></center> #}
              <center>
                <div class="form-group mt-3 ">
                  {{ form_widget(form.submit, { attr: { placeholder: "envoyer votre message" } }) }}
                </div>
                <div class="form-group mt-3 ">
                  <p class="text-center text-break">
                    Vous êtes déjà inscrit ? <a href="{{path("app_login")}}">Connectez-vous ici !</a> 
                  </p>
                </div>
                <div>
                  {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}
              </center>
            </div>
          </div> 
        </div>
      </div>
    </div>
  </section>




{% endblock %}
